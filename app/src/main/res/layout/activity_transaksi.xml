<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Transaksi">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="158dp"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:text="MY ORDER"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:background="#C90014">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/menu1"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="Pesanan Anda :" />

            <EditText
                android:id="@+id/menu"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                android:layout_marginRight="35dp"
                android:layout_marginLeft="15dp"
                android:text="" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/text2"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="Harga                :" />

            <EditText
                android:id="@+id/harga"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                android:layout_marginRight="35dp"
                android:layout_marginLeft="15dp"
                android:text="" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="Pembayaran : Rp." />

            <EditText
                android:id="@+id/bayar"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="#E3E3E3"
                android:textColor="#000000"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:text="" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/transaksi"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="BAYAR"
                android:textColor="#FFFFFF"
                app:backgroundTint="#000"
                app:iconTint="#0B0B0B" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/text4"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="Kembalian : Rp. " />

            <EditText
                android:id="@+id/kembali"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                android:layout_marginRight="35dp"
                android:layout_marginLeft="15dp"
                android:text="" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_marginTop="40dp"
        android:id="@+id/thx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="24sp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/ucapan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="17dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/jam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="50dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="-5dp"
        android:orientation="horizontal"
        android:weightSum="5">

        <ImageView
            android:id="@+id/beranda"
            android:layout_width="30dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/beranda" />
        <ImageView
            android:id="@+id/myorder"
            android:layout_width="30dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/order" />

        <ImageView
            android:id="@+id/ph"
            android:layout_width="30dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/ph" />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="30dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/inbox" />

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="30dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/account" />
    </LinearLayout>
</LinearLayout>